<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_P_back"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bubblegum_sans"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/mycolor1"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/B_DP_back"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor12"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview">

        <ImageView
            android:id="@+id/IV_P_Pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_circle" />

        <TextView
            android:id="@+id/TV_P_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gabriela"
            android:text="Inan Mashrur"
            android:textColor="@color/mycolor1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_P_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriela"
            android:layout_marginTop="5dp"
            android:text="inanmashrur@gmail.com"
            android:textColor="@color/mycolor1"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/TV_P_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gabriela"
            android:text="01833484188"
            android:textColor="@color/mycolor1"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/B_P_changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_style"
            android:backgroundTint="@color/mycolor1"
            android:fontFamily="@font/gabriela"
            android:textColor="@color/white"
            android:text="Change Password"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>