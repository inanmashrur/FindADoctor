<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_DP_back"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bubblegum_sans"
        android:gravity="center"
        android:text="Doctor Profile"
        android:textColor="@color/mycolor1"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/B_DP_back"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor12"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview">

        <ImageView
            android:id="@+id/IV_DP_docPic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_circle" />

        <TextView
            android:id="@+id/TV_DP_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriela"
            android:text=""
            android:textColor="@color/mycolor1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_DP_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriela"
            android:text=""
            android:textColor="@color/mycolor1"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L1"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@drawable/box_style"
            android:backgroundTint="@color/mycolor12"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How Expensive"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/mycolor1"
                android:fontFamily="@font/gabriela"
                />
            <TextView
                android:id="@+id/TV_DP_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/mycolor1"
                android:layout_gravity="center"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginLeft="1dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/box_style"
            android:backgroundTint="@color/mycolor12"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Add As Favourite"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/mycolor1"
                android:fontFamily="@font/gabriela"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/B_DP_fav"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:background="@drawable/ic_favorite_white"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/L2" >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/mycolor1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/gabriela"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/TV_DP_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text=""
                    android:textColor="@color/mycolor1"
                    android:background="@drawable/box_style"
                    android:fontFamily="@font/gabriela"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/mycolor12"
                    android:background="@drawable/box_style"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Chamber :"
                        android:textColor="@color/mycolor1"
                        android:textStyle="bold"
                        android:fontFamily="@font/gabriela"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/TV_DP_TV_DP_C_L"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:text=""
                        android:textColor="@color/mycolor1"
                        android:fontFamily="@font/gabriela"
                        android:gravity="center"
                        android:textAlignment="gravity"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/mycolor12"
                    android:background="@drawable/box_style"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Schedule :"
                        android:textColor="@color/mycolor1"
                        android:textStyle="bold"
                        android:fontFamily="@font/gabriela"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/TV_DP_sche"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:text=""
                        android:textColor="@color/mycolor1"
                        android:fontFamily="@font/gabriela"
                        android:gravity="center"
                        android:textAlignment="gravity"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/mycolor12"
                    android:background="@drawable/box_style"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Contact :"
                        android:textColor="@color/mycolor1"
                        android:textStyle="bold"
                        android:fontFamily="@font/gabriela"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/TV_DP_Con"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:text=""
                        android:textColor="@color/mycolor1"
                        android:fontFamily="@font/gabriela"
                        android:gravity="center"
                        android:textAlignment="gravity"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/B_DP_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/box_style"
                    android:backgroundTint="@color/mycolor1"
                    android:fontFamily="@font/gabriela"
                    android:textColor="@color/white"
                    android:text="View Chamber location on Map"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/B_DP_Appoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/box_style"
                    android:backgroundTint="@color/mycolor1"
                    android:textColor="@color/white"
                    android:text="Book An Appointment"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>