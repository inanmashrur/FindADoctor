<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:gravity="center"
    android:background="@color/mycolor12"
    >

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/B_WA_back"
       android:layout_width="32dp"
       android:layout_height="32dp"
       android:layout_gravity="right"
       android:layout_marginTop="10dp"
       android:layout_marginRight="10dp"
       android:background="@drawable/ic_cancel"
       />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gabriela"
        android:text="About"
        android:textStyle="bold"
        android:textColor="@color/mycolor1"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_style"
        android:fontFamily="@font/gabriela"
        android:text="You can find a doctor through this application. You can book an appoint of that doctors too. You can also save your favourite doctors in your favourite bucket."
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TeamDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gabriela"
        android:text="Developed By"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/mycolor1"
        android:textColorHint="@color/mycolor1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/box_style"
        >

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriela"
            android:text="Md. Inan Mashrur"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="inanmashrur@gmail.com"
            android:fontFamily="@font/gabriela"

            />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gabriela"
            android:text="Abdur Rahman"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="arsami01910@gmail.com"
            android:fontFamily="@font/gabriela"
            />



    </LinearLayout>

</LinearLayout>