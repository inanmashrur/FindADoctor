<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/LL_appoint_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor12"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/TV_appC_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/gabriela"
                android:text="Dr. Brig. Gen. Syed Asif Iqbal"
                android:textColor="@color/mycolor1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_appC_doctor_speciality"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/gabriela"
                android:text="Burn Plastic Sergery Specialist"
                android:textColor="@color/mycolor1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="5dp"
                android:background="@color/mycolor1"
                />

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/TV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gabriela"
                        android:textStyle="bold"
                        android:text="Appointment Date: "
                        android:textAlignment="center"
                        android:textColor="@color/mycolor1" />

                    <TextView
                        android:id="@+id/TV_appC_date"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gabriela"
                        android:text="1.2.2020"
                        android:textAlignment="center"
                        android:textColor="@color/mycolor1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/TV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gabriela"
                        android:text="Serial No : "
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/mycolor1"/>

                    <TextView
                        android:id="@+id/TV_appC_serial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gabriela"
                        android:text="100"
                        android:textAlignment="center"
                        android:textColor="@color/mycolor1" />

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>