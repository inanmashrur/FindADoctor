<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="365dp"
    android:background="@color/mycolor12"
    >

    <TextView
        android:id="@+id/TV_M_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circular_button"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/mycolor1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_M_Sign"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor1"
        android:fontFamily="@font/gabriela"
        android:text="Signin"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_M_close" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_M_Profile"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor1"
        android:fontFamily="@font/gabriela"
        android:text="Profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_M_Sign" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_M_About"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor1"
        android:fontFamily="@font/gabriela"
        android:text="About"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_M_Profile" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_M_Help"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor1"
        android:fontFamily="@font/gabriela"
        android:text="Help"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_M_About" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/B_M_exit"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/box_style"
        android:backgroundTint="@color/mycolor12"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/gabriela"
        android:text="Exit"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_M_Help" />

</androidx.constraintlayout.widget.ConstraintLayout>